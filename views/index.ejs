<!DOCTYPE html>
<html ng-app="IndexApp">
  <head>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js"></script>
    <script type="text/javascript" src="javascripts/indexApp.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <title><%= title %></title>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
         <div class="col-md-1">
          <h2>Log in</h2>
         </div><!-- col end --> 
      </div><!-- row end -->

      <div class="row">
        <div class="col-sm-2 col-md-2 col-lg-2">
          <form action="/login" method="post">
            <input class="form-control" type="text" name="username" required="true" placeholder="username">
            <input class="form-control" type="password" name="password" required="true" placeholder="password">
            <input type="submit" class="btn btn-default" value="Log in">
          </form> 
        </div><!-- col end -->
      </div><!-- row end -->
      <div class="row">
          <div class="col-md-5">
              <h4><%= message %></h4>
          </div><!-- col end -->
      </div><!-- row end -->
      <div class="row">
        <div class="col-md-5">
          <h2>Register</h2>
        </div><!-- col end -->
      </div><!-- row end -->
      <div class="register" ng-controller="RegisterController">
              <div class="row">
          <div class="col-md-2">
              
              <form action="/register" method="post">
                <div ng-repeat="input in registerTemplates[userType]">
                  <input  class="form-control"  type="{{input.type}}" name="{{input.purpose}}" required="true" placeholder="{{input.purpose.replace('_',' ')}}" style="margin-bottom:2px">
                </div>
          
                <div id="timeStuff" ng-show="userType!='Company'">
                   <select name="day" >
                  <%for(var i=1;i<32;i++){%>
                    <option><%=i%></option>
                  <%}%>
                </select>
                <select name="month">
                  <%for(var i=1;i < 13;i++){%>
                  <option><%=i%></option>
                  <%}%>
                </select>
                <select name="year">
                  <%for(var i=new Date().getFullYear();i > new Date().getFullYear() - 71;i--){%>
                    <option><%=i%></option>
                  <%}%>
                </select>
                </div>
                
                  </div>
                </div><!-- Row end -->
                <div class="row">
                  <div class="col-md-12">
                    <label>Your user type</label>

                    <select name="userType" ng-model="userType">
                      <option value="Student">Student</option>
                      <!--<option value="Programmer">Programmer</option>-->
                      <option value="Company">Company</option>
                    </select>

                  </div>
                </div><!-- Row end-->
                <input type="submit" class="btn btn-default" value="Register">
              </form> 
      </div>

          </div><!-- col end -->
      </div><!-- row end -->

      <div class="row">
          <div class="col-md-5">
              <h4><%= registerMessage %></h4>
          </div><!-- col end -->
      </div><!-- row end -->

    </div><!-- Container end -->

    <script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
  </body>
</html>
