<!DOCTYPE html>
<html ng-app="CompanyProfile">
	<head>
		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js"></script>
		<script type="text/javascript" src="javascripts/companyProfile.js"></script>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="stylesheets/profile.css">
	    <style type="text/css">
	    	body{
	    		padding-top:70px;
	    	}
	    </style>
	    <title><%= username %></title>
	</head>
	<body>
		<!-- Nav bar -->
		<nav class="navbar navbar-default navbar-fixed-top">
		  <div class="container-fluid">
		  	<div class="collapse navbar-collapse">
			<form class="navbar-form navbar-left" role="search">
		        <div class="form-group">
		          <input type="text" class="form-control" id="search" name="search" autocomplete="off" placeholder="Search">
		        </div>
		        <button type="submit" class="btn btn-default" id="searchBtn">Search</button>
		    </form>
		    <form class="navbar-form navbar-right" action="/logout" method="post">
		    	<button class="btn btn-default navbar-btn" type="submit">Log out</button>
		    </form>
		    <form class="navbar-form navbar-right">
		    	<button class="btn btn-default navbar-btn" action = "/<%=username%>" method="get"><%=username%></button>
		    </form>
		   </div>
		  	</div>
			
		</nav>

		<div class="container-fluid">
			<div class="row" style="margin-bottom:3px;">
				<div class="col-sm-3 col-md-2 col-lg-1
				">
					<img id="profilePic" src="images/noUser1.jpg">
				</div>
				<div class="col-md-5">
					<h1><%=username%></h1>
				</div><!-- col end -->
			</div><!-- row end -->

			<!--<div class="row">	
				<div class="col-md-5">
					<h3>Age: <%= new Date().getFullYear() - birthYear %></h3>
				</div>
			</div><!-- Row end -->

			<div ng-init="activeTab='AboutUs'" ng-controller="MenuController">
				<ul class="nav nav-tabs">

					<li ng-class="{active: activeTab == 'AboutUs'}">
						<a href ng-click="activeTab = 'AboutUs'">About Us
						</a>
					</li>

					<li ng-class="{active: activeTab == 'Employees'}">
						<a href ng-click="activeTab = 'Employees'">Employees
						</a>
					</li>

				</ul><!-- Menu end-->
				<div class="menu-content">
					<div
						ng-show="activeTab == 'AboutUs'"
						ng-include="'pages/AboutUs.html'"
					></div>
					<div
						ng-show="activeTab == 'Employees'"
						ng-include="'pages/Employees.html'"
					></div>
				</div>
			</div>
				

	</div><!-- Container end -->

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	<script src="javascripts/task.js"></script>
	<script src="javascripts/buttons.js"></script>
	</body>
</html>